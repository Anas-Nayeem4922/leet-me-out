
generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Level {
  Easy
  Medium
  Hard
}

enum Language {
  CPP
  JAVA
  PYTHON
  JAVASCRIPT
  TYPESCRIPT
  C
}

model User {
  id                    String              @id @default(uuid())
  username              String     
  password              String
  name                  String?
  location              String?
  website               String?
  github                String?
  twitter               String?
  linkedin              String?
  profileImage          String?
  submissions           Submissions[]
}

model Submissions {
  id                   Int               @id @default(autoincrement())
  userId               String
  name                 String
  level                Level
  status               String
  submittedAt          DateTime          @default(now())
  language             Language
  topics               String[]
  error                String?
  user                 User              @relation(fields: [userId], references: [id])
}
